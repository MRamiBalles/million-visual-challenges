-- Environment variables template for Supabase Edge Functions
-- Copy this to supabase/functions/.env.local for local development

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Supabase Configuration (auto-populated by Supabase CLI)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# External APIs
ARXIV_API_BASE_URL=http://export.arxiv.org/api/query
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key-here
CROSSREF_API_EMAIL=your-email@example.com

# Rate Limiting
RATE_LIMIT_PAPERS_PER_DAY=100
RATE_LIMIT_AI_REQUESTS_PER_HOUR=50

# Cost Tracking
AI_COST_ALERT_THRESHOLD=10.00
