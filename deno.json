{
    "compilerOptions": {
        "lib": [
            "deno.window"
        ],
        "strict": true
    },
    "lint": {
        "files": {
            "include": [
                "supabase/functions/"
            ]
        },
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "supabase/functions/"
            ]
        },
        "options": {
            "lineWidth": 100,
            "indentWidth": 2,
            "semiColons": true,
            "singleQuote": false
        }
    }
}